<% const estaCreando = typeof libro === "undefined"%>

<% const existeMensaje = typeof mensaje !== "undefined"%>

<h1> <%= estaCreando ? 'Registrar':'Actualizar' %> Autor</h1>

<p><%= estaCreando ? 'Registre':'Actualice' %> a un Autor</p>

<% if (existeMensaje){%>
<p>MENSAJE: <%=mensaje%></p>
<%}%>


<form action="/autor/<%= estaCreando ? 'crear' : 'actualizar' %>-Autor/<%= estaCreando ? '' : autor.id %>"
      method="POST">

    <div>
        <label for="nombre_autor">Nombre:</label>
        <input id="nombre_autor"
               type="text"
               name="nombre_autor"
               value="<%= estaCreando ? '' : autor.nombre_autor %>" required>
    </div>
    <br>
    <div>
        <label for="apellido_autor">Apellido:</label>
        <input id="apellido_autor"
               type="text"
               name="apellido_autor"
               value="<%= estaCreando ? '' : autor.apellido_autor %>" required>
    </div>
    <br>
    <div>
        <label for="fecha_nacimiento">Fecha de Nacimiento:</label>
        <input id="fecha_nacimiento"
               type="date"
               min="1900-01-01"
               max="2019-02-08"
               name="fecha_nacimiento"
               value="<%= estaCreando ? '' : autor.fecha_nacimiento %>" required>
    </div>
    <br>
    <div>
        <label for="numero_libros">Numero de libros:</label>
        <input id="numero_libros"
               type="number"
               min="0"
               max="15"
               name="numero_libros"
               value="<%= estaCreando ? '' : autor.numero_libros %>" required>
    </div>
    <br>
    <div>
        <label for="ecuatoriano">Es Ecuatoriano:</label>
        <select name="ecuatoriano" id="ecuatoriano">
            <option value="0">No</option>
            <option value="1">Si</option>
        </select>
    </div>


    <br>
    <button><%= estaCreando ? 'Crear' : 'Actualizar' %> Autor</button>

</form>

<a href="/autor/autor">
    <button>Regresar</button>
</a>